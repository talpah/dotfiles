[push]
	default = simple
	autoSetupRemote = true
	followTags = true

[core]
	editor = vim
	autocrlf = input
	pager = less -FRX
	whitespace = trailing-space,space-before-tab

[init]
	defaultBranch = main

[pull]
	rebase = false
	ff = only

[fetch]
	prune = true
	prunetags = true

[rebase]
	autoStash = true
	autoSquash = true

[merge]
	conflictStyle = zdiff3

[diff]
	algorithm = histogram
	colorMoved = default
	colorMovedWS = allow-indentation-change
	wordDiff = color

[log]
	date = iso

[status]
	showUntrackedFiles = all
	submoduleSummary = true

[help]
	autocorrect = 10

[credential]
	helper = cache --timeout=3600

[transfer]
	fsckobjects = true

[receive]
	fsckObjects = true

[alias]
	# Log aliases
	lg1 = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
	lg2 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all
	lg = !"git lg1"
	ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
	ld = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=relative
	lola = log --graph --decorate --pretty=colorsofgit --abbrev-commit --all
	lol = log --graph --decorate --pretty=colorsofgit --abbrev-commit
	show-incoming = log --pretty=colorsofgit --graph --decorate --boundary --left-right --cherry-pick HEAD...FETCH_HEAD

	# Common shortcuts
	s = status -sb
	st = status
	ci = commit
	cam = commit -am
	co = checkout
	br = branch
	cl = clone
	cp = cherry-pick
	dc = diff --cached

	# Modern git (2.23+)
	sw = switch
	swc = switch -c

	# Utilities
	undo = reset --soft HEAD^
	amend = commit --amend --no-edit
	files = diff-tree --no-commit-id --name-only -r
	aliases = config --get-regexp alias
	stash-all = stash save --include-untracked
	gone = ! git fetch -p && git for-each-ref --format '%(refname:short) %(upstream:track)' refs/heads | awk '$2 == \"[gone]\" {print $1}' | xargs -r git branch -D

[color]
	ui = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = green
	changed = yellow
	untracked = red

[pretty]
	colorsofgit = %Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset
